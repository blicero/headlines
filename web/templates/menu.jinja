<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #D4D4D4">
  <div class="container-fluid">
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">

        <li class="nav-item">
          <a class="nav-link" href="/main">Start</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/feeds">Feeds</a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/news">Recent News</a>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle"
             href="#"
             id="subscribeMenuLink"
             role="button"
             data-bs-toggle="dropdown"
             aria-expanded="false">
            Subscribe
          </a>
          <ul class="dropdown-menu" aria-labelledby="subscribeMenuLink">
            <li>
              <form class="dropdown-item" action="/feed/subscribe" method="post" id="subscribeForm">
                <table class="horizontal">
                  <tr>
                    <th>Name</th>
                    <td>
                      <input type="text" name="name" id="name" placeholder="Name" required />
                    </td>
                  </tr>
                  <tr>
                    <th>URL</th>
                    <td>
                      <input
                      type="url"
                      name="url"
                      id="url"
                      placeholder="https://www.example.com/rss"
                      required />
                    </td>
                  </tr>
                  <tr>
                    <th>Homepage</th>
                    <td>
                      <input
                      type="url"
                      name="homepage"
                      id="homepage"
                      placeholder="https://www.example.com/"
                      required />
                    </td>
                  </tr>
                  <tr>
                    <th>Interval<br />(in seconds)</th>
                    <td>
                      <input type="number" name="interval" id="interval" value="900" min="0" max="10080" />
                    </td>
                  </tr>
                  <tr>
                    <th><input type="button" onclick="clear_form();" value="Reset" /></th>
                    <td><input type="button" onclick="subscribe();" value="OK" /></td>
                  </tr>
                </table>
              </form>
            </li>
          </ul>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/tag/all">Tags</a>
        </li>

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle"
             href="#"
             id="createTagLink"
             role="button"
             data-bs-toggle="dropdown"
             aria-expanded="false">
             Create Tag
          </a>
          <ul class="dropdown-menu" aria-labelledby="createTagLink">
            <li>
              <form class="dropdown-item" action="/tag/new" id="tag_create_form">
                <table class="horizontal">
                  <tr>
                    <th>Name</th>
                    <td>
                      <input type="text" name="name" id="tag_form_name" placeholder="Name" required />
                    </td>
                  </tr>
                  <tr>
                    <th>Parent</th>
                    <td>
                      <select id="tag_form_parent" class="btn btn-secondary">
                        <option value="0">
                          None
                        </option>
                        {% for tag in tags %}
                          <option value="{{ tag.tag_id }}"
                                  id="{{ id_root }}_opt_{{ tag.tag_id }}">
                                  {{ lib.nbsp(tag.lvl*2) }}
                                  {{ tag.name }}
                          </option>
                        {% endfor %}
                      </select>
                    </td>
                  </tr>
                  <tr>
                    <td>
                      <input type="button"
                             class="btn btn-danger"
                             onclick="clear_tag_form();"
                             value="Reset" />
                    </td>

                    <td>
                      <input type="button"
                             class="btn btn-success"
                             onclick="create_tag();"
                             value="OK" />
                    </td>
                  </tr>
                </table>
              </form>
            </li>
          </ul>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="/later">Later</a>
        </li>

      </ul>
    </div>
  </div>
</nav>
