{% extends "main.jinja" %}

{% import "macros.jinja" as lib %}

{% block title %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="container">
    <div class="row">
      <div class="col">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Tag</th>
              <th># Items</th>
            </tr>
          </thead>
          <tbody>
            {% for tag in tags %}
              <tr>
                <td>
                  {{ lib.nbsp(tag.lvl * 2) }}<a href="/tag/{{ tag.tag_id }}">{{ tag.name }}</a>
                  &nbsp;
                  <img src="/static/search.png"
                       width="32"
                       height="32"
                       onclick="display_items_for_tag({{ tag.tag_id }});" />
                </td>
                <td>
                  {{ tag.link_cnt }}
                  {% if tag.link_cnt != tag.link_cnt_rec %}({{ tag.link_cnt_rec }}){% endif %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div> {# end column 1 #}
      <div class="col" id="content-area">
      </div>
    </div>
  </div>
{% endblock %}

