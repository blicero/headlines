<h1 id="page_title">{{ title }}</h1>
<hr />

{% if dbg %}
<script>
 $(document).ready(function() {
   if (!settings.beacon.active) {
     $("#beacon")[0].innerHTML = "Beacon is suspended";
   }
 });
</script>

<table>
  <tr>
    <td>
      <div class="debug container-fluid">
        {{ app_string }} running on {{ hostname }}<br />
        Template rendered on <time>{{ now }}</time><br />
        <div id="beacon" class="debug" onclick="beaconToggle();">
          Beacon
        </div>
      </div>
    </td>
    <td>
      <div class="messages">
        <table class="tbl tbl-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Level</th>
              <th>Message</th>
              <th>
                <input type="button" class="btn btn-warning" onclick="msg_clear();" value="Delete" />
              </th>
            </tr>
          </thead>
          <tbody id="msg_tbl">

          </tbody>
        </table>
      </div>
    </td>
  </tr>
</table>
{% endif %}
<p>
  &nbsp;
</p>

<hr />

