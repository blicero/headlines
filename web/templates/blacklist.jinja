{% extends "main.jinja" %}

{% block content %}
  <div class="centered">
    <button class="btn btn-primary btn-sm"
            data-bs-toggle="collapse"
            href="#collapse_bl_form"
            aria-expanded="false"
            aria-controls="#collapse_bl_form">
            Add Pattern
    </button>

    <div class="collapse" id="collapse_bl_form">
      <p>
      </p>
      Pattern:
      <input type="text" id="bl_pat_input" />
      &nbsp;
      <span id="bl_pat_check_res">
      </span>
      <p>
      </p>
      <button type="button" class="btn btn-sm btn-success">
        Check regex
      </button>
      
      <button type="button" class="btn btn-sm btn-primary">
        Save
      </button>
    </div>
  </div>

  <p>
    <hr />
  </p>

  <div>
    <table class="table table-striped table-secondary">
      <thead>
        <tr>
          <th>ID</th>
          <th>Pattern</th>
          <th>Hits</th>
          <th>&nbsp;</th>
        </tr>
      </thead>

      <tbody>
        {% for item in blacklist.items %}
          <tr>
            <td class="num">{{ item.item_id }}</td>
            <td>{{ item.pattern.pattern }}</td>
            <td class="num">{{ item.cnt }}</td>
            <td>&nbsp;</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}


