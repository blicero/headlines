{% block content %}
  <table class="table table-secondary table-striped">
    <thead>
      <tr>
        <th>Time</th>
        <th>Source</th>
        <th>Headline</th>
        <th>Rating</th>
        <th>Tags</th>
        <th>Details</th>
      </tr>
    </thead>

    <tbody>
      {% for item in items %}
        <tr>
          <td>{{ item.stamp_str }}</td>
          <td>
            <a href="/feed/{{ item.feed_id }}">
              {{ feeds[item.feed_id].name }}
            </a>
          </td>
          
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

